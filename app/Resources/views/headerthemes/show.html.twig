{% extends 'base.html.twig' %}

{% block body %}
    <h1>HeaderThemes</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ headerTheme.id }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ headerTheme.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ headerTheme.height }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('headerthemes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('headerthemes_edit', { 'id': headerTheme.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
